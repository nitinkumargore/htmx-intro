---
import Ulist from "./partials/list.astro";
import Counter from "./partials/counter.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Astro</title>
  </head>
  <body>
    <div class="flex justify-end py-[10px] px-[20%] mb-[-56px]">
      <div
        class="flex justify-center items-center bg-gray-200 w-12 h-12 rounded-full"
      >
        <div id="anotherCounter">0</div>
      </div>
    </div>
    <div class="flex flex-col gap-5 items-center mt-1">
      <div class="flex text-2xl">Astro htmx application!</div>

      <hr class="h-1 w-[60%] min-w-[850px] border-slate-300" />

      <div>
        <div class="flex gap-2">
          <div class="w-10 h-10 flex items-center justify-center">Page</div>
          {
            [1, 2, 3].map((page) => {
              return (
                <a
                  href="#"
                  class="w-10 h-10 flex items-center justify-center border"
                  hx-get={`/partials/list?page=${page}`}
                  hx-target="#contents"
                >
                  {page}
                </a>
              );
            })
          }
        </div>
        <div id="contents">
          <Ulist />
        </div>
      </div>

      <hr class="h-1 w-[55%] min-w-[800px] border-slate-300" />

      <div class="flex flex-col gap-2 text-center">
        <div class="text-xl">Search</div>
        <input
          class="min-w-[500px] p-3 border-2 rounded-xl"
          type="text"
          name="search"
          placeholder="Search"
          hx-get={`/partials/search`}
          hx-target="#searchResult"
          hx-trigger="keyup change delay:500ms"
        />
        <div id="searchResult"></div>
      </div>

      <hr class="h-1 w-[55%] min-w-[800px] border-slate-300" />

      <div class="flex flex-col text-center gap-2">
        <div class="text-xl">Counter Example</div>
        <Counter />
      </div>
    </div>
  </body>
</html>
